<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightwhite"
    tools:context=".Activity.EditProfileActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:id="@+id/textViewDisplayNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Name"
        android:layout_marginTop="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:textColor="@color/blackcolor"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextDisplayName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Display Name"
        android:layout_below="@id/textViewDisplayNameLabel"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edit_text"
        android:paddingLeft="15dp"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/textViewEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_below="@id/editTextDisplayName"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/editTextDisplayName"
        android:textColor="@color/blackcolor"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Email"
        android:layout_below="@id/textViewEmailLabel"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edit_text"
        android:paddingLeft="15dp"
        android:elevation="5dp"
        android:enabled="false"
        android:focusable="false" />

    <TextView
        android:id="@+id/textViewPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/editTextEmail"
        android:textColor="@color/blackcolor"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Phone"
        android:layout_below="@id/textViewPhoneLabel"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edit_text"
        android:paddingLeft="15dp"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/textViewAvatarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avatar URL"
        android:layout_below="@id/editTextPhone"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/editTextPhone"
        android:textColor="@color/blackcolor"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextAvatar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Avatar URL"
        android:layout_below="@id/textViewAvatarLabel"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_edit_text"
        android:paddingLeft="15dp"
        android:elevation="5dp" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Save"
        android:layout_below="@id/editTextAvatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/joinbtn"
        android:textColor="@color/whitecolor"
        android:elevation="5dp" />

</RelativeLayout>