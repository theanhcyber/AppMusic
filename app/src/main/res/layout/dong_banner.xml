<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/imageviewbackgroundanner"
        android:layout_width="match_parent"
        android:layout_height="220dp"/>
    <View
        android:background="@drawable/custom_background"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        />
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignBottom="@+id/imageviewbackgroundanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/imageviewbanner"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
       <TextView
           android:textStyle="bold"
           android:textColor="#ffffff"
           android:text="Lo yeu mat roi"
           android:textSize="17sp"
           android:id="@+id/textviewtitlebannersong"
           android:layout_toRightOf="@+id/imageviewbanner"
           android:layout_alignTop="@+id/imageviewbanner"
           android:layout_marginTop="5dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_toRightOf="@+id/imageviewbanner"
            android:layout_below="@+id/textviewtitlebannersong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textviewnoidung"
                android:textColor="#fffdfc"
                android:text="Chao ban den voi ca khuc moi cua ca si hot nhat hien nay"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>