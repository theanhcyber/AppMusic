<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightwhite"
    android:padding="10dp"
    tools:context=".Activity.RegisterAppMusicActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp"/>
        <TextView
            android:id="@+id/goback"
            android:onClick="goBack"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Go back"
            android:gravity="end"
            android:textColor="@color/blackcolor"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Your Account"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/blackcolor"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:hint="Your Name"
            android:layout_marginTop="35dp"
            android:paddingLeft="15dp"
            android:inputType="text"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:hint="Email"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"/>

        <EditText
            android:id="@+id/phone"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:hint="Phone Number"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="phone"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:hint="Password"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"/>

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:hint="Confirm Password"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"/>

        <EditText
            android:id="@+id/avatar_url"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:hint="Avatar URL"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:inputType="textUri"
            android:textColorHint="@color/fullwhite"
            android:elevation="5dp"
            android:background="@drawable/btn"/>


        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:contentDescription="Avatar"/>

        <Button
            android:id="@+id/register"
            android:layout_width="350dp"
            android:layout_height="48dp"
            android:text="Create"
            android:textColor="@color/whitecolor"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:elevation="5dp"
            android:onClick="registerUser"
            android:background="@drawable/joinbtn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="MusicApp"
            android:textColor="@color/fullwhite"
            android:layout_marginTop="25dp"/>
    </LinearLayout>
</LinearLayout>