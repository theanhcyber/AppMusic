<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
   android:layout_margin="4dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linearcarviewalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:id="@+id/imageviewalbum"
            android:layout_width="220dp"
            android:layout_height="220dp"/>
        <TextView
            android:textColor="#000000"
            android:maxWidth="220dp"
            android:textSize="22sp"
            android:text="Ngay xuan long phung sum vay"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/textviewtenalbum"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="17dp"
            android:textColor="#9e9797"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="200dp"
            android:text="Sơn Tùng MTP"
            android:id="@+id/textviewtencasialbum"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>